pipeline {
      agent any
      stages{
          stage ('build'){
                   steps {
                       echo "building the project"
                   }
          }
      }
}
}
      post{
         success{
             emailext body: 'build success', subject: '$PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_URL - $BUILD_STATUS:', to: 'yaqoobali599@gmail.com'
         }
         failure{
             emailext body: 'build failure', subject: '$PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_URL - $BUILD_STATUS:', to: 'yaqoobali599@gmail.com'
         }
      }
}

