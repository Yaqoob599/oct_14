pipeline {
       agent { label 'java' }   
  
       stages {
              stage('checkout') {
                    steps {
                         git branch: 'main', url: 'https://github.com/boxfuse/boxfuse-sample-java-war-hello.git'
                    }
               }

               stage('test') {
                     steps {
                         echo 'running unit test and integration test'
                         echo 'testing for webhook'
                     }
               }

               stage('build') {
                     steps {
                         sh 'mvn clean package'
                     }
               }

             

       }

}
